<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#999999">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<SeekBar
				android:id="@+id/sb_volume"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="2dp"
				android:background="@drawable/bg_bar_nor"
				android:progressDrawable="@drawable/seek_bar"
				android:thumb="@drawable/seek_bar_thum" />

			<SeekBar
				android:id="@+id/sb_rate"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="2dp"
				android:background="@drawable/bg_bar_nor"
				android:progressDrawable="@drawable/seek_bar"
				android:thumb="@drawable/seek_bar_thum" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_file"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="2dp"
				android:background="@drawable/btn_bar"
				android:textSize="20sp"
				android:textColor="#000000"
				android:gravity="center" />

			<ImageView
				android:id="@+id/iv_btn"
				android:layout_width="60dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="@drawable/btn_bar"
				android:scaleType="centerInside" />

			<ImageView
				android:id="@+id/iv_btn_2"
				android:layout_width="60dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="@drawable/btn_bar"
				android:scaleType="centerInside" />

			<TextView
				android:id="@+id/tv_play_type"
				android:layout_width="120dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:background="@drawable/btn_bar"
				android:textSize="20sp"
				android:textColor="#000000"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/iv_left"
				android:layout_width="60dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="@drawable/btn_bar"
				android:scaleType="centerInside"
				android:src="@drawable/triangle_left" />

			<LinearLayout
				android:id="@+id/ll_opern"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="2dp"
				android:orientation="horizontal">

			</LinearLayout>

			<ImageView
				android:id="@+id/iv_right"
				android:layout_width="60dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="@drawable/btn_bar"
				android:scaleType="centerInside"
				android:src="@drawable/triangle_right" />

		</LinearLayout>

	</LinearLayout>

	<kk.piano.view.KeyScrollView
		android:id="@+id/ksv_key"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_margin="2dp"
		android:background="#000000">

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<LinearLayout
				android:id="@+id/ll_white"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/ll_black"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="horizontal">

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1" />
			</LinearLayout>

		</FrameLayout>

	</kk.piano.view.KeyScrollView>
</LinearLayout>
